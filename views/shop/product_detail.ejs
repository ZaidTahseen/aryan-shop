
<%- include('../includes/head.ejs')   %>


<link rel="stylesheet" href="/detail.css">

</head>

<body>

<%- include('../includes/nav.ejs')   %>



<section id="detail_products"> 

    <div id="prod_Img" class="center">
        <img src="/<%= product.imageUrl %>" alt="">
        <h5><%= product.title %></h5>
    </div>

   
    <div id="prod_detail" class="center">

        <h4><%= product.about %></h4>    

        <h5><%= product.detail[0] %></h5>
        <h5><%= product.detail[1] %></h5>
        <h5><%= product.detail[2] %></h5>
        
        <h3>Price -  Rs <%= product.price %></h3>

        <% if (product.quantity == 0 ) { %>
            <h5 id="prod_na" >Product Unavailable</h5>
        
        <%  } else {  %>
        
            <% if ( !isAdmin ) { %>
                <a href="/cart/<%= product._id %>" class="btn btn-primary">Add To Cart</a> 

            <% } %>
        <% } %>
    </div>

</section>


 
<%- include('../includes/end.ejs')   %>