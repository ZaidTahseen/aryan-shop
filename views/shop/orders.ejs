<%- include('../includes/head.ejs')   %>


<link rel="stylesheet" href="/order.css">

</head>

<body>

    <%- include('../includes/nav.ejs')   %>

    <div class="orders">

        <table>
            <thead>
                <tr>       
                    <th>S.No</th>
                    <th>Order_ Id</th>
                    <th>Total-Amount</th>
                </tr>
            </thead>

            <tbody>
                <% for ( order in  orders ) { %>
                <tr>
                    <td><%= parseInt(order) +1 %></td>
                    <td><%= orders[order]._id %> </td>
                    <td><%= orders[order].total_price %> </td>
                </tr>
                
                <% for (product of orders[order].products) { %>
                    <tr>
                        <td>
                            <%=  product.productId.title %>
                        </td>
                        <td>           
                            <img src="<%=  product.productId.imageUrl %>"  class="order-image" alt="">
                        </td>
                        <td>
                            <%=  product.quantity %>  * <%=  product.productId.price %> =  <%=  product.cart_price %>
                        </td>
                    </tr>

                <%  }  %>
                <tr >
                    <td colspan="3" style="background-color: whitesmoke;"></td>
                </tr>
                <%  }  %>
            </tbody>
        </table>

    </div>

    <%- include('../includes/end.ejs')   %>